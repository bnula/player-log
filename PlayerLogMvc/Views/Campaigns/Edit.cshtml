@model CampaignVM
@{ 
    ViewBag.Title = $"Edit {Model.CampaignName}";
}

<h1>@ViewBag.Title</h1>

<div class="col-md-6">
    <form asp-action="Edit" class="card card-body">
        <input type="hidden" asp-for="CampaignId" />
        <div class="card-group">
            <div class="card-subtitle"><span class="text-primary font-weight-bolder">Campaign Name:</span> @Model.CampaignName</div>
            <input asp-for="CampaignName" class="form-control" />
            <span asp-validation-for="CampaignName" class="text-danger"></span>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-success m-2 rounded">
                <i class="fas fa-check"></i> Edit
            </button>
            <a asp-controller="Campaigns" asp-action="Index" type="submit" class="btn btn-secondary m-2 rounded">
                <i class="fas fa-arrow-alt-circle-left"></i> Back to List
            </a>
        </div>
    </form>
</div>