@model LocationDetailsVM
@{
    ViewBag.Title = $"Edit {Model.LocationName}";
}

<form class="card bg-light col-md-6 p-1 m-1 d-inline-block" asp-action="Edit">
    <input type="hidden" asp-for="LocationId" />
    <div class="card-header">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class=" card-body">
        <div class="input-group mb-3">
            <div class="input-group-prepend flex-column col-md-3 pr-2">
                <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
            </div>
            <input asp-for="LocationName" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@Model.LocationName">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend flex-column col-md-3 pr-2">
                <label class="input-group-text" for="inputGroupSelect01">Campaign</label>
            </div>
            <select class="custom-select" id="inputGroupSelect01" asp-for="@Model.CampaignId">
                <option selected value="@Model.Campaign.CampaignId">Choose...</option>
                @foreach (var c in ViewBag.Camps)
                {
                    <option value="@c.CampaignId">@c.CampaignName</option>
                }
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend flex-column col-md-3 text-left pr-2">
                <span class="input-group-text" id="inputGroup-sizing-default">Type</span>
            </div>
            <input asp-for="LocationType" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@Model.LocationType">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend flex-column col-md-3 pr-2">
                <span class="input-group-text" id="inputGroup-sizing-default">Inventory</span>
            </div>
            <textarea asp-for="LocationInventory" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">@Model.LocationInventory</textarea>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend flex-column col-md-3 pr-2">
                <span class="input-group-text" id="inputGroup-sizing-default">Description</span>
            </div>
            <textarea asp-for="Description" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">@Model.Description</textarea>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend flex-column col-md-3 pr-2">
                <span class="input-group-text" id="inputGroup-sizing-default">Notes</span>
            </div>
            <textarea asp-for="Notes" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">@Model.Notes</textarea>
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group">
            <button class="btn btn-success m-2 rounded" type="submit">
                <i class="fas fa-check"></i> Edit
            </button>
            <a asp-controller="Locations" asp-action="Index" class="btn btn-secondary m-2 rounded">
                <i class="fas fa-arrow-alt-circle-left"></i> Back to List
            </a>
        </div>
    </div>
</form>