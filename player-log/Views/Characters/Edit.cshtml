@model player_log.Models.CharacterDetailsVM

@{
    ViewData["Title"] = "Edit Character";
}

<h1>Edit Character</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race" class="control-label"></label>
                <input asp-for="Race" class="form-control" />
                <span asp-validation-for="Race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainClass" class="control-label"></label>
                <input asp-for="MainClass" class="form-control" />
                <span asp-validation-for="MainClass" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Multiclass" /> @Html.DisplayNameFor(model => model.Multiclass)
                </label>
            </div>
            @if (Model.Multiclass == true)
            {
                <div class="form-group">
                    <label asp-for="SecondClass" class="control-label"></label>
                    <input asp-for="SecondClass" class="form-control" />
                    <span asp-validation-for="SecondClass" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThirdClass" class="control-label"></label>
                    <input asp-for="ThirdClass" class="form-control" />
                    <span asp-validation-for="ThirdClass" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Strength" class="control-label"></label>
                <input asp-for="Strength" class="form-control" />
                <span asp-validation-for="Strength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dexterity" class="control-label"></label>
                <input asp-for="Dexterity" class="form-control" />
                <span asp-validation-for="Dexterity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Constitution" class="control-label"></label>
                <input asp-for="Constitution" class="form-control" />
                <span asp-validation-for="Constitution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wisdom" class="control-label"></label>
                <input asp-for="Wisdom" class="form-control" />
                <span asp-validation-for="Wisdom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intelligence" class="control-label"></label>
                <input asp-for="Intelligence" class="form-control" />
                <span asp-validation-for="Intelligence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Charisma" class="control-label"></label>
                <input asp-for="Charisma" class="form-control" />
                <span asp-validation-for="Charisma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Campaigns" class="control-label"></label>
                <input asp-for="Campaigns" class="form-control" />
                <span asp-validation-for="Campaigns" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
                <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-ban"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
