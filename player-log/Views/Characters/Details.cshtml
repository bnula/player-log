@model player_log.Models.CharacterDetailsVM

@{
    ViewData["Title"] = "Character Details";
}

<h1>Character Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Race)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Race)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MainClass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MainClass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Multiclass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Multiclass)
        </dd>
        @if (Model.Multiclass == true)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SecondClass)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SecondClass)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ThirdClass)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ThirdClass)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Strength)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Strength)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dexterity)
