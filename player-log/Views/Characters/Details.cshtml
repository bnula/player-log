        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Charisma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Charisma)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campaigns)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campaigns)
