@model player_log.Models.CompanionDetailsVM

@{
    ViewData["Title"] = "Create New NPC";
}

<h1>Create New NPC</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cr" class="control-label"></label>
                <input asp-for="Cr" class="form-control" />
                <span asp-validation-for="Cr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanionClass" class="control-label"></label>
                <input asp-for="CompanionClass" class="form-control" />
                <span asp-validation-for="CompanionClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Campaigns" class="control-label"></label>
                <input asp-for="Campaigns" class="form-control" />
                <span asp-validation-for="Campaigns" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Create</button>
                <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-ban"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
